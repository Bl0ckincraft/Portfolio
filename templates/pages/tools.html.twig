{% extends 'base.html.twig' %}

{% block title %}{{ "menu.tools.title"|trans }}{% endblock %}

{% block body %}
    {% set flyingHeader = 'true' %}
    {% include 'partials/header.html.twig' %}
    <div id="tools">
        <div class="min-h-screen flex justify-center items-center">
            <div class="text-center p-4">
                <div class="w-full relative">
                    <span class="title" content="{{ "tools.title"|trans }}">{{ "tools.title"|trans }}</span>
                </div>
                <div class="w-full relative">
                    <span class="subtitle italic">{{ "tools.subtitle"|trans }}</span>
                </div>
            </div>

            <div class="scroll-indicator"></div>
        </div>
        <div class="tools-part relative min-h-screen flex flex-col">
            <div class="wave-wrapper">
                <div class="wave"></div>
                <div class="wave"></div>
                <div class="wave"></div>
            </div>

            {% set tools = ['java', 'js', 'c++', 'python', 'dart', 'php', 'flutter', 'android_studio', 'jetbrains', 'mysql', 'ubuntu', 'blender', 'git', 'symfony', 'laravel', 'spigot', 'forge', 'postman', 'tailwind', 'html', 'css', 'udemy', 'sass', 'stripe', 'unreal_engine'] %}

                <div class="container mx-auto w-full my-auto flex flex-wrap gap-5 md:gap-7 justify-center px-4 py-10">
                    {% for tool in tools %}
                        <div class="tool-button rounded-[0.4rem] p-3" data-tool="{{ tool }}">
                            <div class="w-[70px] h-[70px] md:w-[80px] md:h-[80px] flex flex-row justify-center items-center">
                                <img class="w-full h-full object-contain" src="/images/tools_icons/{{ tool }}.avif" alt="{{ ("tools.tool." ~ tool ~ ".title")|trans }}"/>
                            </div>
                        </div>

                        <div id="tool-window-{{ tool }}" class="fixed left-0 top-0 right-0 bottom-0 tool-window items-center justify-center">
                            <div class="tool-content after:rounded-lg rounded-lg p-3 md:p-5 mx-3 md:mx-5 my-3 md:my-5 flex flex-col">
                                <h1 class="text-2xl font-bold w-full text-center mb-3 md:mb-5">{{ ("tools.tool." ~ tool ~ ".title")|trans }}</h1>
                                <span class="md:text-xl w-full">{{ ("tools.tool." ~ tool ~ ".content")|trans|raw }}</span>
                                <button class="mt-3 md:mt-5 mx-auto rounded-lg p-3 close-tool text-xl font-bold">{{ "tools.close"|trans }}</button>
                            </div>
                        </div>
                    {% endfor %}
                </div>
        </div>
    </div>
    {% include 'partials/footer.html.twig' %}
{% endblock %}
