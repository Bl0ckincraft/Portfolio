{% extends 'base.html.twig' %}

{% block title %}{{ "welcome"|trans }}{% endblock %}

{% block body %}
    {% set flyingHeader = 'true' %}
    {% include 'partials/header.html.twig' %}
    <div id="home" class="">
        <div class="h-screen flex flex-col home-top container mx-auto relative">
            <div class="mx-auto my-auto md:me-auto md:ms-5">
                <div class="text-center">
                    <span class="firstname" content="John">John</span>
                </div>
                <div class="text-center">
                    <span class="lastname" content="Doe">Doe</span>
                </div>
                <div class="text-center italic">
                    <span class="state" content="{{ "home.state"|trans }}">{{ "home.state"|trans }}</span>
                </div>
            </div>
            <div class="self-picture">
                <svg height="100%" width="100%" viewBox="0 0 163 200" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                        <pattern id="imagePattern" x="0" y="0" width="1" height="1">
                            <image href="{{ asset('images/me.avif') }}" width="110%" height="110%" clip-path="url(#clipPath)" opacity="0.7"/>
                        </pattern>

                        <clipPath id="clipPath">
                            <path d="m131.26,24.64c6.77,13.81 3.97,33.57 3.97,47.26c0,13.7 2.8,21.33 8.52,32c5.6,10.67 14.12,24.59 12.49,35.59c-1.52,11.11 -13.19,19.31 -25.67,30.87c-12.37,11.56 -25.67,26.38 -37.22,23.46c-11.44,-3.03 -21.12,-23.8 -36.41,-33.79c-15.29,-9.99 -36.17,-9.09 -44.81,-17.29c-8.64,-8.08 -5.02,-25.04 -3.03,-40.87c2.1,-15.83 2.45,-30.54 9.8,-40.75c7.47,-10.22 21.7,-15.83 35.01,-26.05c13.19,-10.1 25.44,-24.7 39.79,-28.29c14.35,-3.48 30.81,4.15 37.57,17.85z"/>
                        </clipPath>
                    </defs>

                    <rect width="100%" height="100%" fill="url(#imagePattern)" />
                </svg>
            </div>

            <div class="scroll-indicator"></div>
        </div>
        <div id="about-section" class="relative flex flex-col">
            <div class="wave-wrapper">
                <div class="wave"></div>
                <div class="wave"></div>
                <div class="wave"></div>
            </div>
            <div class="wave-wrapper rotate-180">
                <div class="wave"></div>
                <div class="wave"></div>
                <div class="wave"></div>
            </div>
            <div class="my-20 container p-3 mx-auto flex flex-col">
                <div class="mx-auto text-center about-title-container">
                    <span class="text-3xl md:text-5xl font-extrabold uppercase">{{ "home.aboutTitle"|trans }}</span>
                </div>

                <div class="flex flex-row flex-wrap mt-12 justify-center about-cards">
                    {% set aboutData = [
                        'home.about.me',
                        'home.about.studies',
                        'home.about.interests',
                        'home.about.travels',
                        'home.about.goals',
                        'home.about.passion'
                    ] %}

                    {% for d in aboutData %}
                        <div class="card-container w-full lg:w-1/2 xl:w-1/3 p-5 h-full">
                            <div class="card mx-auto">
                                <div class="card__face card__face--front p-5 flex items-center justify-center">
                                    <div class="card__default-bg"></div>
                                    <div class="card__bg-container">
                                        <div class="card__bg"></div>
                                    </div>
                                    <div class="card__text w-full text-center">
                                        <span class="uppercase font-bold text-center text-3xl">{{ (d ~ '.title')|trans }}</span>
                                    </div>
                                </div>
                                <div class="card__face card__face--back p-5 sm:p-10 text-lg">
                                    <div class="card__default-bg"></div>
                                    <div class="card__text h-full flex items-center">
                                        <p>{{ (d ~ '.content')|trans }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {% include 'partials/footer.html.twig' %}
{% endblock %}
